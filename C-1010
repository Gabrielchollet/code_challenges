#include <stdio.h>
 
int main() {
    typedef struct
    {
        int codigo;
        int numero;
        float valor;
    }
    peça;
    peça p1, p2;
    scanf("%i %i %f", &p1.codigo, &p1.numero, &p1.valor);
    scanf("%i %i %f", &p2.codigo, &p2.numero, &p2.valor);
    
    float custo = p1.numero * p1.valor + p2.numero * p2.valor;
    printf("VALOR A PAGAR: R$ %.2f\n", custo);
    return 0;
}
